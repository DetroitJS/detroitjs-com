{
  "private": true,
  "name": "detroit-js",
  "homepage": "http://detroitjs.com",
  "twitter": "detroit_js",
  "meetup": "detroit-javascript",
  "repository": "https://https://github.com/DetroitJS/DetroitJS-com",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint \"web_modules/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "phenomic": {
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-0"
    ],
    "env": {
      "production": {
        "presets": [
          "babel-preset-react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/prefer-stateless-function": 0,
      "react/jsx-no-literals": 0
    }
  },
  "eslintConfigRuleReact/prefer-stateless-function": "https://github.com/MoOx/phenomic/issues/46",
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^6.0.0-beta.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "6.5.0",
    "css-loader": "^0.23.0",
    "css-modularscale": "1.0.0",
    "dateformat": "1.0.12",
    "eslint": "^2.0.0",
    "eslint-config-i-am-meticulous": "^4.1.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.1",
    "history": "^2.0.0",
    "invariant": "^2.1.1",
    "isomorphic-fetch": "2.2.1",
    "json-loader": "^0.5.2",
    "npm-run-all": "^1.7.0",
    "phenomic": "0.12.2",
    "postcss-at-rules-variables": "0.0.21",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-conditionals": "2.0.2",
    "postcss-cssnext": "^2.4.0",
    "postcss-each": "0.9.1",
    "postcss-for": "2.0.2",
    "postcss-import": "8.1.2",
    "postcss-loader": "^0.7.0",
    "postcss-reporter": "^1.3.0",
    "postcss-responsive-type": "0.3.3",
    "raw-loader": "^0.5.1",
    "react": "^0.14.0 || ^15.0.0-rc.1",
    "react-dom": "^0.14.0 || ^15.0.0-rc.1",
    "react-helmet": "^3.0.0",
    "react-redux": "^4.0.0",
    "react-router": "^2.2.2",
    "react-svg-inline": "^1.1.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.0.0",
    "redux-saga": "0.10.4",
    "sanitize.css": "3.3.0",
    "shed-css": "1.0.0-rc.7",
    "style-loader": "^0.12.3",
    "stylelint": "^6.0.0",
    "stylelint-config-standard": "^7.0.0",
    "suitcss-components-grid": "3.0.3",
    "suitcss-utils-size": "1.1.0",
    "webfontloader": "1.6.24",
    "webpack": "^1.12.1"
  }
}
