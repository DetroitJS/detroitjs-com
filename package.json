{
  "private": true,
  "name": "detroit-js",
  "homepage": "http://detroitjs.com",
  "twitter": "detroit_js",
  "meetup": "detroit-javascript",
  "repository": "//github.com/DetroitJS/DetroitJS-com",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint \"web_modules/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "phenomic": {
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-0"
    ],
    "env": {
      "production": {
        "presets": [
          "babel-preset-react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/prefer-stateless-function": 0,
      "react/jsx-no-literals": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "import/max-dependencies": 0
    }
  },
  "eslintConfigRuleReact/prefer-stateless-function": "https://github.com/MoOx/phenomic/issues/46",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "/font-range/",
            "/font-size/"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "7.0.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "6.16.0",
    "css-loader": "0.25.0",
    "css-modularscale": "1.1.1",
    "dateformat": "1.0.12",
    "eslint": "3.7.1",
    "eslint-config-i-am-meticulous": "5.0.2",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "6.4.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "0.9.0",
    "history": "~2.0.0",
    "invariant": "^2.1.1",
    "isomorphic-fetch": "2.2.1",
    "json-loader": "^0.5.2",
    "npm-run-all": "3.1.0",
    "phenomic": "0.17.8",
    "postcss-at-rules-variables": "0.0.25",
    "postcss-browser-reporter": "0.5.0",
    "postcss-conditionals": "2.0.2",
    "postcss-cssnext": "2.8.0",
    "postcss-each": "0.9.3",
    "postcss-for": "2.1.1",
    "postcss-import": "8.1.2",
    "postcss-loader": "0.13.0",
    "postcss-reporter": "^1.3.0",
    "postcss-responsive-type": "0.4.0",
    "raw-loader": "^0.5.1",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-helmet": "^3.0.0",
    "react-redux": "4.4.5",
    "react-router": "2.8.1",
    "react-svg-inline": "1.2.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "3.6.0",
    "redux-devtools-extension": "1.0.0",
    "redux-saga": "0.12.0",
    "sanitize.css": "4.1.0",
    "shed-css": "1.0.0-rc.9",
    "style-loader": "0.13.1",
    "stylelint": "7.4.2",
    "stylelint-config-standard": "13.0.2",
    "suitcss-components-grid": "3.0.3",
    "suitcss-utils-size": "2.0.0",
    "svgo-loader": "1.1.0",
    "webfontloader": "1.6.26",
    "webpack": "1.13.2"
  }
}
